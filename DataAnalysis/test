# Voronoi diagram for a set of point:
import xlrd
import numpy as np
import matplotlib.pyplot as plt
from scipy.spatial import Voronoi, voronoi_plot_2d
import csv

location_file = open(r'/Users/Dijkstraaaaa/Documents/LTE/zhangjiagang_location.csv')
location = csv.reader(location_file)
location_list = []
for row in location:
	location_list.append([float(row[1]), float(row[2])])
college_list = [153, 159, 160, 370, 371]
some_location = []
for i in college_list:
	some_location.append(location_list[i])
points = np.array(some_location)

print points
vor = Voronoi(points)
voronoi_plot_2d(vor)
plt.show()
